<Window x:Class="SOSboardgame.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SOS Game" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#1B1B2F">
        <!-- Dark background -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome to SOS Board Game"
                   Foreground="White"
                   FontSize="36"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   TextAlignment="Center"/>

        <Button x:Name="StartButton"
                Content="Start Game"
                Width="180"
                Height="60"
                FontSize="20"
                Foreground="White"
                Background="Red"
                FontWeight="Bold"
                Cursor="Hand"
                BorderBrush="DarkRed"
                BorderThickness="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="1"
                Click="StartButton_Click"/>
    </Grid>
</Window>
