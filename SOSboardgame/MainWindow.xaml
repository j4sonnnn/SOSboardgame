<Window x:Class="SOSboardgame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SOS Game - Sprint 2" Height="620" Width="760">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="SOS Game" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                <TextBlock Text="Board Size:" Margin="0,0,8,0"/>
                <ComboBox x:Name="BoardSizeBox" Width="90" SelectedIndex="0">
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="16"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                <TextBlock Text="Game Mode:" Margin="0,0,8,0"/>
                <ComboBox x:Name="GameModeBox" Width="120" SelectedIndex="0">
                    <ComboBoxItem Content="Simple"/>
                    <ComboBoxItem Content="General"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                <TextBlock Text="Letter:" Margin="0,0,8,0"/>
                <RadioButton x:Name="LetterS" Content="S" IsChecked="True" GroupName="LetterChoice"/>
                <RadioButton x:Name="LetterO" Content="O" GroupName="LetterChoice" Margin="8,0,0,0"/>
            </StackPanel>

            <Button Content="Start New Game" Width="150" Click="StartGame_Click"/>
        </StackPanel>

        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="0,12,0,12" Padding="8">
            <UniformGrid x:Name="BoardGrid" Rows="8" Columns="8"/>
        </Border>

        <TextBlock Grid.Row="3" x:Name="TurnLabel" FontSize="16"/>
    </Grid>
</Window>
