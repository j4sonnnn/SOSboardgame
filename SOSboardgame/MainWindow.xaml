<Window x:Class="SOSboardgame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SOS Game – Sprint 4" Height="650" Width="950">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <StackPanel Grid.Column="0" Margin="10">

            <TextBlock Text="SOS Game" FontSize="26" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Board Size -->
            <TextBlock Text="Board Size:" FontWeight="Bold"/>
            <ComboBox x:Name="BoardSizeBox" SelectedIndex="5" Margin="0,5,0,10">
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
            </ComboBox>

            <!-- Game Mode -->
            <TextBlock Text="Game Mode:" FontWeight="Bold"/>
            <ComboBox x:Name="GameModeBox" SelectedIndex="0" Margin="0,5,0,10">
                <ComboBoxItem Content="Simple"/>
                <ComboBoxItem Content="General"/>
            </ComboBox>

            <!-- Letter Selection -->
            <TextBlock Text="Letter:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                <RadioButton x:Name="LetterS" Content="S" IsChecked="True"/>
                <RadioButton x:Name="LetterO" Content="O" Margin="20,0,0,0"/>
            </StackPanel>

            <!-- BLUE PLAYER -->
            <TextBlock Text="Blue Player:" FontWeight="Bold"/>
            <StackPanel Margin="0,5,0,10">
                <RadioButton x:Name="BlueHuman" Content="Human" IsChecked="True"/>
                <RadioButton x:Name="BlueComputer" Content="Computer"/>
            </StackPanel>

            <!-- RED PLAYER -->
            <TextBlock Text="Red Player:" FontWeight="Bold"/>
            <StackPanel Margin="0,5,0,20">
                <RadioButton x:Name="RedHuman" Content="Human" IsChecked="True"/>
                <RadioButton x:Name="RedComputer" Content="Computer"/>
            </StackPanel>

            <!-- Start Game Button -->
            <Button x:Name="StartButton"
                    Content="Start New Game"
                    Height="40"
                    Click="StartGame_Click"/>

            <!-- Turn Label -->
            <TextBlock x:Name="TurnLabel"
                       Text="Current turn:"
                       FontWeight="Bold"
                       Margin="0,20,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- GAME BOARD -->
        <Border Grid.Column="1" Background="#EEE" Padding="10" CornerRadius="5">
            <UniformGrid x:Name="BoardGrid"
                         Rows="8"
                         Columns="8"
                         Margin="10"
                         Background="LightGray"/>
        </Border>

    </Grid>
</Window>
